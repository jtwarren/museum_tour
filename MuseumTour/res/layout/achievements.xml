<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context=".AchievementsActivity" >

    <ListView
        android1:id="@+id/achievementsChecklist"
        android1:layout_width="match_parent"
        android1:layout_height="400dip"
        android1:layout_alignLeft="@+id/progressBar1"
        android1:layout_alignParentBottom="true"
        android1:layout_alignRight="@+id/progressBar1" >

    </ListView>

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/progressBar1"
        android1:layout_alignParentTop="true"
        android1:text="Progress" />

    <ProgressBar
        android1:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentRight="true"
        android1:layout_below="@+id/textView1" />
	
</RelativeLayout>